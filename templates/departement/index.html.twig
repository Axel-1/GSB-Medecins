{% extends 'base.html.twig' %}

{% block title %}Départements{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Départements</h1>
        <div class="container p-0 m-0">
            <div class="row justify-content-end p-0 m-0">
                <div class="col-auto me-0 pe-0">
                    <a class="btn btn-success" href="{{ path('departement_new') }}">Nouveau</a>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.nom }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('departement_show', {'id': departement.id}) }}">Afficher</a>
                    <a class="btn btn-outline-warning" href="{{ path('departement_edit', {'id': departement.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun département</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
