{% extends 'base.html.twig' %}

{% block title %}Médecins / Afficher{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Médecins / Afficher</h1>
    </div>


    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ medecin.prenom }} {{ medecin.nom }}</h5>
                        {% if medecin.specialiteComplementaire != null %}
                            <p class="card-subtitle">{{ medecin.specialiteComplementaire.libelle }}</p>
                        {% endif %}
                    </div>
                    <div class="container">
                        <div class="row mb-1">
                            <div class="col">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <b>Adresse</b> : {{ medecin.adresse }}</li>
                                    <li class="list-group-item"><b>Tél</b> : <a
                                                href="tel:{{ medecin.tel }}">{{ medecin.tel }}</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><b>ID</b> : {{ medecin.id }}
                                    </li>
                                    <li class="list-group-item"><b>Département</b> : {{ medecin.departement.nom }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-warning"
                           href="{{ path('medecin_edit', {'id': medecin.id}) }}">Modifier</a>
                        {{ include('medecin/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
